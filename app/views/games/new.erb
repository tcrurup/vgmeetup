<h1>Add Game</h1>

<form action='/games' method='post'>

  <div class='page_section'>
    <label for='game[title]'>Title: </label>
    <input type='text' name='game[title]'>

    <label for='game[release_year]'>Release Year: </label>
    <input type='number' name='game[release_year]'>

    <br><br>

    <label><u>Genre Tags</u></label>
    <br>
    <% x=0 %>
    <%Genre.all.sort{ |a,b| a.name<=>b.name }.each do |genre| %>
      <label for='<%=genre.name%>'> <%=genre.name%> </label>
      <input id='<%=genre.name%>' type='checkbox' name='game[genre_ids][]' value='<%=genre.id%>'>
      <% x += 1 %>
      <% if x >= 5 %>
        <br>
        <% x=0 %>
      <% else %>
        |
      <% end %>
    <% end %>
    <br><br>
    <label for='genre[name]'>New Genre (optional)</label>
    <input type='text' name='genre[name]'>

    <br><br>

    <input type='submit' value='Add Game'>
  </div>
</form>
