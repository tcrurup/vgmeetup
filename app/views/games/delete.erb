<table>
  <tr>
    <th>Title</th>
    <th>Release Year</th>
  </tr>
  <tr>
    <td><%= @game.title %></td>
    <td><%= @game.release_year %></td>
  </tr>
</table>
<form action="/games/<%=@game.slug%>" method='post'>
  <input type='hidden' name='_method' value='DELETE'>
  Are you sure your want to delete <%=@game.title%>?
  <input type='submit' value='DELETE'>
</form>
