<div class='central_container'>

  <form action='/user' method='post'>
    <input type='hidden' name='_method' value='PATCH'>

    <label for='user[username]'>Username: </label>
    <input type='text' name='user[username]' value='<%=current_user.username%>' required>
    <br><br>

    <label for='user[firstname]'>First Name: </label>
    <input type='text' name='user[firstname]' value='<%=current_user.firstname%>' required>
    <br><br>

    <label for='user[lastname]'>Last Name: </label>
    <input type='text' name='user[lastname]' value='<%=current_user.lastname%>' required>
    <br><br>

    <label for='user[email]'>Email: </label>
    <input type='email' name='user[email]' value='<%=current_user.email%>'required>
    <br><br>

    <input type='submit' value='Update'>
  </form>

</div>
